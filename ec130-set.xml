					</condition>
				</binding>
</key>-->

			

		</keyboard>
	</input>


	<nasal>
		<ec130>
		           <file>Aircraft/ec130/Nasal/savestate.nas</file>	
			<file>Aircraft/ec130/Nasal/ec130.nas</file>
			<file>Aircraft/ec130/Nasal/flightcontrols.nas</file>
			<file>Aircraft/ec130/Nasal/Electrical.nas</file>

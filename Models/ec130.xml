<?xml version="1.0"?>

<!-- Eurocopter EC 130 Helicopter by Heiko Schulz, animation set -->

<PropertyList>


	<path>ec130.ac</path>
	<offsets>
		<z-m>0.5</z-m>
		<y-m>0</y-m>
		<x-m>0</x-m>

		<pitch-deg>0</pitch-deg>
		
	</offsets>
	
<!--shader-->
<animation>
		<type>shader</type>
		<shader>chrome</shader>
		<texture>glass_shader.png</texture>
		<object-name>glas</object-name>
		<object-name>rightwindow</object-name>
		<object-name>leftwindow</object-name>
		<object-name>rearwindow</object-name>
		<object-name>backwindow</object-name>
</animation>
	
<!--instruments-->
<model>
		<name>HSI</name>
		<path>Aircraft/ec130/Models/ki525a.xml</path>

		<offsets>

			<x-m>-4.345</x-m>
			<y-m>-0.637</y-m>
			<z-m>-0.544</z-m>

			<pitch-deg>-10</pitch-deg>

		</offsets>
	</model>
	
<model>
		<name>ASI</name>
		<path>Aircraft/Instruments-3d/asi/asi.xml</path>

		<offsets>

			<x-m>-4.360</x-m>
			<y-m>-0.722</y-m>
			<z-m>-0.445</z-m>

			<pitch-deg>-10</pitch-deg>

		</offsets>
	</model>
	
<model>
		<name>ATI</name>
		<path>Aircraft/ec130/Models/ai-gauge.xml</path>

		<offsets>

			<x-m>-4.365</x-m>
			<y-m>-0.634</y-m>
			<z-m>-0.450</z-m>

			<pitch-deg>-10</pitch-deg>

		</offsets>
	</model>
	
<model>
		<name>TC</name>
		<path>Aircraft/Instruments-3d/tc/tc.xml</path>

		<offsets>

			<x-m>-4.348</x-m>
			<y-m>-0.724</y-m>
			<z-m>-0.527</z-m>

			<pitch-deg>-10</pitch-deg>

		</offsets>
	</model>
	
<model>
		<name>alt</name>
		<path>Aircraft/Instruments-3d/alt/alt.xml</path>

		<offsets>

			<x-m>-4.3628</x-m>
			<y-m>-0.549</y-m>
			<z-m>-0.450</z-m>

			<pitch-deg>-10</pitch-deg>

		</offsets>
	</model>
	
<model>
		<name>vsi</name>
		<path>Aircraft/Instruments-3d/vsi/vsi.xml</path>

		<offsets>

			<x-m>-4.348</x-m>
			<y-m>-0.549</y-m>
			<z-m>-0.526</z-m>

			<pitch-deg>-10</pitch-deg>

		</offsets>
	</model>
	
<model>
		<name>tach</name>
		<path>Aircraft/ec130/Models/tach.xml</path>

		<offsets>

			<x-m>-4.375</x-m>
			<y-m>-0.549</y-m>
			<z-m>-0.369</z-m>

			<pitch-deg>-10</pitch-deg>

		</offsets>
	</model>
	
<model>
		<name>clock</name>
		<path>Aircraft/Instruments-3d/clock/clock.xml</path>

		<offsets>

			<x-m>-4.338</x-m>
			<y-m>-0.721</y-m>
			<z-m>-0.577</z-m>

			<pitch-deg>-10</pitch-deg>

		</offsets>
	</model>
	
	<!-- rotor animation-->
<animation>
		<name>mainrotors</name>
		<object-name>blades</object-name>
		<object-name>starflex</object-name>
	</animation>

	<!-- main rotor tilt-->

	<animation>
		<type>rotate</type>
		<object-name>starflex</object-name>
		<object-name>blurred</object-name>
		<object-name>mast</object-name>		
		<offset-deg>5</offset-deg>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>-0.1966</x-m>
			<y-m>0.0</y-m>
			<z-m>0.712</z-m>
		</center>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>blades</object-name>
		
		<offset-deg>5</offset-deg>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>-0.1966</x-m>
			<y-m>0.0</y-m>
			<z-m>0.712</z-m>
		</center>
	</animation>



	<!--main rotor (always visible parts) -->

	<animation>
		<type>spin</type>
		<object-name>starflex</object-name>
		<object-name>blurred</object-name>
		<property>rotors/main/rpm</property>
		<factor>1.0</factor>
		<axis>
			<x1-m>-1.966</x1-m>
			<y1-m>0.0</y1-m>
			<z1-m>1.438</z1-m>
			<x2-m>-1.966</x2-m>
			<y2-m>0.0</y2-m>
			<z2-m>1.065</z2-m>
		</axis>
	</animation>

	<animation>
		<type>spin</type>
		<object-name>blades</object-name>
		<property>rotors/main/rpm</property>
		<factor>1.0</factor>
		<axis>
			<x1-m>-1.966</x1-m>
			<y1-m>0.0</y1-m>
			<z1-m>1.438</z1-m>
			<x2-m>-1.966</x2-m>
			<y2-m>0.0</y2-m>
			<z2-m>1.065</z2-m>
		</axis>
	</animation>

	<!-- main rotor disc -->


	<animation>
		<type>material</type>
		<object-name>blurred</object-name>
		<transparency>
			<alpha-prop>rotors/main/rpm</alpha-prop>
			<factor>0.004</factor>
			<offset>-0.25</offset>
			<max>0.4</max>
		</transparency>
		<threshold>0.001</threshold>
	</animation>


	<animation>
		<type>select</type>
		<object-name>mainrotors</object-name>
		<condition>
			<less-than>
				<property>rotors/main/rpm</property>
				<value>175</value>
			</less-than>
		</condition>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>blurred</object-name>
		<property>rotors/main/blade[0]/position-deg</property>
		<factor>1</factor>
		<axis>
			<x1-m>-1.966</x1-m>
			<y1-m>0.0</y1-m>
			<z1-m>1.438</z1-m>
			<x2-m>-1.966</x2-m>
			<y2-m>0.0</y2-m>
			<z2-m>1.065</z2-m>
		</axis>
	</animation>

	<animation>
		<type>noshadow</type>
		<object-name>blurred</object-name>
	</animation>

	<!-- main rotor blades -->


	<animation>
		<type>material</type>
		<object-name>mainrotors</object-name>
		<global type="bool">true</global>
		<transparency>
			<alpha-prop>rotors/main/rpm</alpha-prop>
			<factor>-0.0050</factor>
			<offset>1</offset>
			<max>1</max>
		</transparency>
	</animation>-->

	<animation>
		<type>rotate</type>
		<object-name>starflex</object-name>
		<property>rotors/main/blade[0]/position-deg</property>
		<offset-deg>45</offset-deg>
		<axis>
			<x1-m>-1.966</x1-m>
			<y1-m>0.0</y1-m>
			<z1-m>1.438</z1-m>
			<x2-m>-1.966</x2-m>
			<y2-m>0.0</y2-m>
			<z2-m>1.065</z2-m>
		</axis>
	</animation>

	


</PropertyList>

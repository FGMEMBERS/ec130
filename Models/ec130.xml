 <!--beacon-->
 <animation>
   <type>select</type>
   <object-name>Plane.005X</object-name>
    <condition>
   <greater-than>
     <property>sim/multiplay/generic/int[0]</property>
     <value>24</value>
     </greater-than>
   </condition>
 </animation>
 
 <animation>
   <type>select</type>
   <object-name>Plane.005X</object-name>
   <condition>
     <property>/sim/model/ec130/lighting/beacon-top/state</property>
   </condition>
 </animation>
 
 	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>25000</max-m>
	</animation>

	<Plane.005Xparams>
		<light-near>0.4</light-near>
		<light-med>0.8</light-med>
		<light-far>10</light-far>
	</Plane.005Xparams>

	

	<animation>
		<type>alpha-test</type>
		<object-name>Plane.005X</object-name>
		<alpha-factor>0.001</alpha-factor>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>Plane.005X</object-name>
		<offset-m>5.05421</offset-m>
		<axis>
			<x>4.677532</x>
			<y>0.050192</y>
			<z>1.913951</z>
		</axis>
	</animation>

	<animation>
		<type>billboard</type>
		<object-name>Plane.005X</object-name>
		<spherical type="bool">true</spherical>
	</animation>

	<animation>
		<type>dist-scale</type>
		<object-name>Plane.005X</object-name>
		<interpolation>
			<entry>
				<ind>0</ind>
				<dep alias="../../../../Plane.005Xparams/light-near"/>
			</entry>
			<entry>
				<ind>500</ind>
				<dep alias="../../../../Plane.005Xparams/light-med"/>
			</entry>
			<entry>
				<ind>16000</ind>
				<dep alias="../../../../Plane.005Xparams/light-far"/>
			</entry>
		</interpolation>
	</animation>



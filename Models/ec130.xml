<!--lights-->
<animation>
   <type>select</type>
   <object-name>navlight_left</object-name>
   <object-name>navlight_right</object-name>
   <object-name>navlight_back</object-name>
     <object-name>navlight_front</object-name>
     <object-name>navlight_front2</object-name>
      <condition>
   <greater-than>
     <property>sim/multiplay/generic/int[2]</property>
     <value>24</value>
     </greater-than>
   </condition>
 </animation>
 
 <animation>
		<type>flash</type>
		<object-name>navlight_front</object-name>
		<center>
			<x-m>-3.418</x-m>
			<y-m>0.395</y-m>
			<z-m>-1.317</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<power>5</power>
		<factor>1</factor>
		<offset>0</offset>
		<two-sides type="bool">false</two-sides>
		<min>0.01</min>
		<max>1</max>
	</animation>
	
<animation>

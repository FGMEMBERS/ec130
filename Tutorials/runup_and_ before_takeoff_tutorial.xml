			<z-offset-m>-3.9</z-offset-m>
			<field-of-view>32.7</field-of-view>
		</view>

		<marker>
			<x-m>-4.3322</x-m>
			<y-m>-0.4017</y-m>
			<z-m>-0.6669</z-m>
			<scale>1.8000</scale>
		</marker>

		<message>
				    
		Avionic: On
		
		
		</message>
		<exit>
			<condition>
